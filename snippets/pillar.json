{
  "Import external libraries": {
    "prefix": "import",
    "body": "import ${1|Process,Keyboard,Windows|}",
    "scope": "source.pill",
    "description": "Import external libraries"
  },
  "For loop": {
    "prefix": "for",
    "body": [
      "for (${1:i} = ${2:start} to ${3:end}) {",
      "}"
    ],
    "scope": "source.pill",
    "description": "For loop"
  },
  "For loop with step": {
    "prefix": "for",
    "body": [
      "for (${1:i} = ${2:start} to ${3:end} step ${4:step}) {",
      "}"
    ],
    "scope": "source.pill",
    "description": "For loop with step"
  },
  "While loop": {
    "prefix": "while",
    "body": [
      "while (${1:condition}) {",
      "}"
    ],
    "scope": "source.pill",
    "description": "While loop"
  },
  "If statement": {
    "prefix": "if",
    "body": [
      "if (${1:condition}) {",
      "}"
    ],
    "scope": "source.pill",
    "description": "If statement"
  },
  "If else statement": {
    "prefix": "if",
    "body": "if (${1:condition}) {} else {}",
    "scope": "source.pill",
    "description": "If else statement"
  },
  "If else if statement": {
    "prefix": "if",
    "body": [
      "if (${1:condition}) {",
      "} else if (${2:condition}) {",
      "} else {",
      "}"
    ],
    "scope": "source.pill",
    "description": "If else if statement"
  },
  "Function": {
    "prefix": "func",
    "body": [
      "fn ${1:name}(${2:args}) {",
      "}"
    ],
    "scope": "source.pill",
    "description": "Function"
  },
  "Function with return": {
    "prefix": "funcr",
    "body": [
      "fn ${1:name}(${2:args}) {",
      "\treturn ${3:value}",
      "}"
    ],
    "scope": "source.pill",
    "description": "Function with return"
  },
  "Main function": {
    "prefix": "main",
    "body": [
      "import Process",
      "",
      "fn main() {",
      "\tProcess.write(\"Hello world!\")",
      "}",
      "",
      "main()"
    ],
    "scope": "source.pill",
    "description": "Main function"
  }
}